#include <iostream>
using namespace std;

int main()
{
    char numberoutput[10][13]= {"ноль","один","два","три","четыре","пять","шесть","семь","восемь","девять"};
    cout << "Введите число: \n";
    int number;
    cin >> number;
    cout << numberoutput [number] << endl;
    return 0;
}


#include <iostream>
using namespace std;

int main()
{
    string numberoutput[10] = {"ноль","один","два","три","четыре","пять","шесть","семь","восемь","девять"};
    cout << "Введите число: \n";
    int number;
    cin >> number;
    cout << numberoutput [number] << endl;
    return 0;
}




    
